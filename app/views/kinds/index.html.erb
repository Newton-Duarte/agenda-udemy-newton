<p id="notice"><%= notice %></p>

<h1 class="text-center"><%= "#{t('messages.listing')} #{@kinds.model.model_name.human(count: @kinds.count)}" %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= @kinds.model.human_attribute_name("description") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kinds.each do |kind| %>
      <tr>
        <td><%= kind.description %></td>
        <td>
          <%= link_to t('buttons.edit'), edit_kind_path(kind), class: "btn btn-xs btn-info" %>
          <%= link_to t('buttons.destroy'), kind, method: :delete, data: { confirm: t('messages.confirm') }, class: "btn btn-xs btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('buttons.new'), new_kind_path, class: "btn btn-primary" %>
<%= link_to t('buttons.back'), root_path, class: "btn btn-warning" %>
